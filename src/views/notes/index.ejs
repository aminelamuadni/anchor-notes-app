<div class="mb-3 d-flex justify-content-between align-items-center">
    <div class="input-group">
        <input type="text" id="note-title" class="form-control" placeholder="Note Title"
            value="<%= currentNote ? currentNote.title : '' %>">
        <button id="save-note-btn" class="btn btn-outline-primary ml-2"
            data-default-text='<i class="fas fa-save fa-fw"></i>'>
            <i class="fas fa-save fa-fw"></i>
        </button>
    </div>
</div>
<div class="mb-3">
    <textarea id="note-content" class="form-control" rows="15"
        placeholder="Start typing your note..."><%= currentNote ? currentNote.content : '' %></textarea>
</div>
